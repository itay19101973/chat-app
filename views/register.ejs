<!DOCTYPE html>
<html lang="en">
<%- include('includes/head') %>
<body class="bg-gradient bg-primary bg-opacity-10">
<%- include('includes/navigation') %>
<div class="container mt-5 py-5">
    <div class="row justify-content-center">
        <div class="col-md-6 col-lg-4">
            <div class="card border-0 shadow-lg rounded-4">
                <div class="card-body p-5">
                    <h2 class="text-center mb-4 fw-bold text-primary">Create Account</h2>

                    <% if (typeof errorMessage !== 'undefined' && errorMessage) { %>
                        <div class="alert alert-danger rounded-3 border-0 bg-danger bg-opacity-10" role="alert">
                            <i class="bi bi-exclamation-circle-fill me-2"></i><%= errorMessage %>
                        </div>
                    <% } %>

                    <form action="/register-password" method="GET" id="registerForm">
                        <div class="mb-4">
                            <label for="email" class="form-label fw-semibold">Email address</label>
                            <div class="input-group input-group-lg">
                                <span class="input-group-text bg-light border-end-0">
                                    <i class="bi bi-envelope"></i>
                                </span>
                                <input
                                        value="<%= typeof email !== 'undefined' ? email : '' %>"
                                        type="email"
                                        class="form-control border-start-0 ps-0"
                                        id="email"
                                        name="email"
                                        placeholder="your E-mail"
                                >
                            </div>
                            <div id="email-error" class="text-danger mt-2 small d-none">
                                <i class="bi bi-info-circle me-1"></i>Email must be at least 3 characters before @ and domain must be max 32 characters
                            </div>
                        </div>

                        <div class="mb-4">
                            <label for="firstName" class="form-label fw-semibold">First Name</label>
                            <div class="input-group input-group-lg">
                                <span class="input-group-text bg-light border-end-0">
                                    <i class="bi bi-person"></i>
                                </span>
                                <input
                                        value="<%= typeof firstName !== 'undefined' ? firstName : '' %>"
                                        type="text"
                                        class="form-control border-start-0 ps-0"
                                        id="firstName"
                                        name="firstName"
                                        placeholder="Your name"
                                >
                            </div>
                            <div id="firstName-error" class="text-danger mt-2 small d-none">
                                <i class="bi bi-info-circle me-1"></i>First name must contain only letters and be 3-32 characters long
                            </div>
                        </div>

                        <div class="mb-4">
                            <label for="lastName" class="form-label fw-semibold">Last Name</label>
                            <div class="input-group input-group-lg">
                                <span class="input-group-text bg-light border-end-0">
                                    <i class="bi bi-person"></i>
                                </span>
                                <input
                                        value="<%= typeof lastName !== 'undefined' ? lastName : '' %>"
                                        type="text"
                                        class="form-control border-start-0 ps-0"
                                        id="lastName"
                                        name="lastName"
                                        placeholder="Your last name"
                                >
                            </div>
                            <div id="lastName-error" class="text-danger mt-2 small d-none">
                                <i class="bi bi-info-circle me-1"></i>Last name must contain only letters and be 3-32 characters long
                            </div>
                        </div>
                        <div class="d-grid mt-5">
                            <button type="submit" class="btn btn-primary btn-lg rounded-pill">
                                <i class="bi bi-arrow-right me-2"></i>Continue to Password
                            </button>
                        </div>
                    </form>
                    <p class="text-center mt-4 mb-0">
                        Already have an account? <a href="/login" class="text-decoration-none fw-bold">Login here</a>
                    </p>
                </div>
            </div>
        </div>
    </div>
</div>

<script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.2/dist/js/bootstrap.bundle.min.js"></script>
<script src="../javascripts/register.js"></script>
</body>
</html>