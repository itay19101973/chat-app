<!DOCTYPE html>
<html lang="en">
<%- include('includes/head') %>
<body class="bg-light">
<%- include('includes/navigation') %>
<div class="container mt-5">
    <div class="row justify-content-center">
        <div class="col-md-6 col-lg-4">
            <div class="card shadow-sm">
                <div class="card-body p-4">
                    <h2 class="text-center mb-4">Register</h2>

                    <% if (typeof errorMessage !== 'undefined' && errorMessage) { %>
                        <div class="alert alert-danger" role="alert">
                            <%= errorMessage %>
                        </div>
                    <% } %>

                    <form action="/register-password" method="GET">
                        <div class="mb-3">
                            <label for="email" class="form-label">Email address</label>
                            <input
                                    type="email"
                                    class="form-control"
                                    id="email"
                                    name="email"
                                    required
                                    pattern="^[a-zA-Z0-9._]{3,}@[a-zA-Z0-9.-]{1,32}$"
                                    maxlength="64"
                                    placeholder="name@example.com"
                                    title="Email must be at least 3 characters before @ and domain must be max 32 characters"
                            >
                        </div>
                        <div class="mb-3">
                            <label for="firstName" class="form-label">First Name</label>
                            <input
                                    type="text"
                                    class="form-control"
                                    id="firstName"
                                    name="firstName"
                                    required
                                    minlength="3"
                                    maxlength="32"
                                    pattern="[a-zA-Z]+"
                                    placeholder="John"
                                    title="First name must be 3-32 letters"
                            >
                        </div>
                        <div class="mb-3">
                            <label for="lastName" class="form-label">Last Name</label>
                            <input
                                    type="text"
                                    class="form-control"
                                    id="lastName"
                                    name="lastName"
                                    required
                                    minlength="3"
                                    maxlength="32"
                                    pattern="[a-zA-Z]+"
                                    placeholder="Doe"
                                    title="Last name must be 3-32 letters"
                            >
                        </div>
                        <div class="d-grid">
                            <button type="submit" class="btn btn-primary">Continue to Password</button>
                        </div>
                    </form>
                    <p class="text-center mt-3 mb-0">
                        Already have an account? <a href="/login" class="text-decoration-none">Login here</a>
                    </p>
                </div>
            </div>
        </div>
    </div>
</div>

<!-- Bootstrap JavaScript Bundle with Popper -->
<script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.2/dist/js/bootstrap.bundle.min.js"></script>
</body>
</html>