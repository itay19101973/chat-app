<!DOCTYPE html>
<html lang="en">
<%- include('includes/head') %>
<body class="bg-light">
<%- include('includes/navigation') %>
<div class="container mt-5">
    <div class="row justify-content-center">
        <div class="col-md-6 col-lg-4">
            <div class="card shadow-sm">
                <div class="card-body p-4">
                    <h2 class="text-center mb-4">Register</h2>

                    <% if (typeof errorMessage !== 'undefined' && errorMessage) { %>
                        <div class="alert alert-danger" role="alert">
                            <%= errorMessage %>
                        </div>
                    <% } %>

                    <form action="/register-password" method="GET" id="registerForm">
                        <div class="mb-3">
                            <label for="email" class="form-label">Email address</label>
                            <input

                                    value="<%= typeof email !== 'undefined' ? email : '' %>"
                                    type="email"
                                    class="form-control"
                                    id="email"
                                    name="email"
                                    placeholder="name@example.com"
                            >
                            <div id="email-error" class="text-danger mt-1 small d-none">
                                Email must be at least 3 characters before @ and domain must be max 32 characters
                            </div>
                        </div>

                        <div class="mb-3">
                            <label for="firstName" class="form-label">First Name</label>
                            <input
                                    value="<%= typeof firstName !== 'undefined' ? firstName : '' %>"
                                    type="text"
                                    class="form-control"
                                    id="firstName"
                                    name="firstName"
                                    placeholder="John"
                            >
                            <div id="firstName-error" class="text-danger mt-1 small d-none">
                                First name must contain only letters and be 3-32 characters long
                            </div>
                        </div>

                        <div class="mb-3">
                            <label for="lastName" class="form-label">Last Name</label>
                            <input
                                    value="<%= typeof lastName !== 'undefined' ? lastName : '' %>"
                                    type="text"
                                    class="form-control"
                                    id="lastName"
                                    name="lastName"
                                    placeholder="Doe"
                            >
                            <div id="lastName-error" class="text-danger mt-1 small d-none">
                                Last name must contain only letters and be 3-32 characters long
                            </div>
                        </div>
                        <div class="d-grid">
                            <button type="submit" class="btn btn-primary">Continue to Password</button>
                        </div>
                    </form>
                    <p class="text-center mt-3 mb-0">
                        Already have an account? <a href="/login" class="text-decoration-none">Login here</a>
                    </p>
                </div>
            </div>
        </div>
    </div>
</div>

<script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.2/dist/js/bootstrap.bundle.min.js"></script>
<script src="../javascripts/register.js"></script>
</body>
</html>