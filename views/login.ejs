<!DOCTYPE html>
<html lang="en">
<%- include('includes/head') %>
<body class="bg-gradient bg-primary bg-opacity-10">
<%- include('includes/navigation') %>
<div class="container mt-5 py-5">
    <div class="row justify-content-center">
        <div class="col-md-6 col-lg-4">
            <div class="card border-0 shadow-lg rounded-4">
                <div class="card-body p-5">
                    <h2 class="text-center mb-4 fw-bold text-primary">Login</h2>
                    <% if (typeof registered !== 'undefined' && registered) { %>
                        <div class="alert alert-success rounded-3 border-0 bg-success bg-opacity-10" role="alert">
                            <i class="bi bi-check-circle-fill me-2"></i>Registration successful! Please log in to continue.
                        </div>
                    <% } %>
                    <% if (typeof errorMessage !== 'undefined' && errorMessage) { %>
                        <div class="alert alert-danger rounded-3 border-0 bg-danger bg-opacity-10" role="alert">
                            <i class="bi bi-exclamation-circle-fill me-2"></i><%= errorMessage %>.
                        </div>
                    <% } %>
                    <form action="/login" method="POST">
                        <div class="mb-4">
                            <label for="email" class="form-label fw-semibold">Email</label>
                            <div class="input-group input-group-lg">
                                <span class="input-group-text bg-light border-end-0">
                                    <i class="bi bi-envelope"></i>
                                </span>
                                <input type="text" class="form-control border-start-0 ps-0" id="email" name="email" required>
                            </div>
                        </div>
                        <div class="mb-4">
                            <label for="password" class="form-label fw-semibold">Password</label>
                            <div class="input-group input-group-lg">
                                <span class="input-group-text bg-light border-end-0">
                                    <i class="bi bi-lock"></i>
                                </span>
                                <input type="password" class="form-control border-start-0 ps-0" id="password" name="password" required>
                            </div>
                        </div>
                        <div class="d-grid gap-3 mt-5">
                            <button type="submit" class="btn btn-primary btn-lg rounded-pill">
                                <i class="bi bi-box-arrow-in-right me-2"></i>Login
                            </button>
                        </div>
                    </form>
                    <p class="text-center mt-4 mb-0">
                        Don't have an account? <a href="/register" class="text-decoration-none fw-bold">Register here</a>
                    </p>
                </div>
            </div>
        </div>
    </div>
</div>
<script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.2/dist/js/bootstrap.bundle.min.js"></script>
</body>
</html>