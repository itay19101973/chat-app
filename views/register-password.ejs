<!DOCTYPE html>
<html lang="en">
<%- include('includes/head') %>
<body class="bg-gradient bg-primary bg-opacity-10">
<%- include('includes/navigation') %>
<div class="container mt-5 py-5">
    <div class="row justify-content-center">
        <div class="col-md-6 col-lg-4">
            <div class="card border-0 shadow-lg rounded-4">
                <div class="card-body p-5">
                    <h2 class="text-center mb-4 fw-bold text-primary">Set Password</h2>

                    <% if (typeof errorMessage !== 'undefined' && errorMessage) { %>
                        <div class="alert alert-danger rounded-3 border-0 bg-danger bg-opacity-10" role="alert">
                            <i class="bi bi-exclamation-circle-fill me-2"></i><%= errorMessage %>
                        </div>
                    <% } %>

                    <form action="/register" method="POST" id="passwordForm">
                        <input type="hidden" name="email" value="<%= email %>">
                        <input type="hidden" name="firstName" value="<%= firstName %>">
                        <input type="hidden" name="lastName" value="<%= lastName %>">

                        <div class="mb-4">
                            <label for="password" class="form-label fw-semibold">Password</label>
                            <div class="input-group input-group-lg">
                                <span class="input-group-text bg-light border-end-0">
                                    <i class="bi bi-lock"></i>
                                </span>
                                <input
                                        type="password"
                                        class="form-control border-start-0 ps-0"
                                        id="password"
                                        name="password"
                                >
                            </div>
                        </div>
                        <div class="mb-4">
                            <label for="confirmPassword" class="form-label fw-semibold">Confirm Password</label>
                            <div class="input-group input-group-lg">
                                <span class="input-group-text bg-light border-end-0">
                                    <i class="bi bi-lock-fill"></i>
                                </span>
                                <input
                                        type="password"
                                        class="form-control border-start-0 ps-0"
                                        id="confirmPassword"
                                        name="confirmPassword"
                                >
                            </div>
                        </div>

                        <div id="error-message" class="alert alert-danger rounded-3 border-0 bg-danger bg-opacity-10 d-none" role="alert">
                        </div>

                        <div class="d-grid gap-3 mt-5">
                            <button type="submit" class="btn btn-primary btn-lg rounded-pill">
                                <i class="bi bi-check-lg me-2"></i>Complete Registration
                            </button>
                            <button type="button" onclick="window.history.back()" class="btn btn-outline-secondary rounded-pill">
                                <i class="bi bi-arrow-left me-2"></i>Back
                            </button>
                        </div>
                    </form>
                </div>
            </div>
        </div>
    </div>
</div>

<script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.2/dist/js/bootstrap.bundle.min.js"></script>
<script src="../javascripts/registerPassword.js"></script>
</body>
</html>